<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaketFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/softpurple"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilihan_paket"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/rekomendasiSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/siapkan_dirimu_belajar_lebih_banyak_materi_dan_metode_pembelajaran_premium_hanya_di_icdesign_gunakan_promo_awal_tahun_guna_menambah_skill_desain_kamu_sekarang"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beginnerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9F1CB"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rekomendasiSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0">

        <TextView
            android:id="@+id/beginnerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beginner"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/beginnerTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite"
            android:background="#71B462"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/beginnerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rp_300_000"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/beginnerTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/beginnerDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/deskripsiBeginner"
            android:textColor="#444444"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/beginnerPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/beginnerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klik Disini"
            android:textSize="14dp"
            android:backgroundTint="#71B462"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/beginnerDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intermediateCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF4CC"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/beginnerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/intermediateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intermediate"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/intermediateTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot"
            android:background="#F1A94E"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/intermediatePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 500.000"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/intermediateTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/intermediateDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/deskripsiIntermediate"
            android:textColor="#444444"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/intermediatePrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/intermediateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klik Disini"
            android:backgroundTint="#F1A94E"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/intermediateDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"
            android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- High Level -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/highLevelCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EAD8F3"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/intermediateCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/highLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Level"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/highLevelTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/good"
            android:background="#9672A6"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/highLevelPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 1.000.000"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/highLevelTag"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/highLevelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dekripsi_highlevel"
            android:textColor="#444444"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/highLevelPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/highLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klik Disini"
            android:backgroundTint="#9672A6"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/highLevelDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>